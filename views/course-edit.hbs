<h1>edit course {{course.title}}</h1>
<form action="/courses/edit" method="post">
    <div class="input-field">
        <input id="title" type="text" class="validate" required name="title" value="{{course.title}}">
        <label for="title">Course title</label>
        <span class="helper-text" data-error="enter title"></span>
    </div>

    <div class="input-field">
        <input id="price" type="number" class="validate" required min="1" name="price" value="{{course.price}}">
        <label for="price">Course price</label>
        <span class="helper-text" data-error="enter price"></span>
    </div>

    <div class="input-field">
        <input id="img" type="text" class="validate" required name="img" value="{{course.img}}">
        <label for="img">url of img</label>
        <span class="helper-text" data-error="enter url"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">

    <button class="btn btn-primary">Edit course</button>
</form>
